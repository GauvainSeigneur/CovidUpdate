<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group
                android:name="mini_loader_group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="mini_loader"
                    android:pathData="M 12 7.7 C 9.7 7.7 7.8 9.6 7.8 12 C 7.8 14.3 9.7 16.3 12.1 16.3 C 14.5 16.3 16.4 14.4 16.4 12 C 16.3 9.7 14.4 7.8 12 7.7"
                    android:strokeColor="#FFFFFFFF"
                    android:strokeWidth="1.75"
                    android:strokeLineCap="round"
                    android:strokeMiterLimit="10"/>
            </group>
            <group
                android:name="big_loader_group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="big_loader"
                    android:pathData="M 11.9 2.8 C 6.8 2.8 2.7 6.9 2.7 12 C 2.7 17.1 6.8 21.2 11.9 21.2 C 17 21.2 21.1 17.1 21.1 12 C 21.1 6.9 17 2.8 11.9 2.8"
                    android:strokeColor="#FFFFFFFF"
                    android:strokeWidth="2"
                    android:trimPathStart="0.99"
                    android:strokeLineCap="round"
                    android:strokeMiterLimit="10"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="big_loader_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="3000"
                android:valueFrom="0"
                android:valueTo="1440"
                android:valueType="floatType"
                android:interpolator="@android:anim/linear_interpolator"/>
        </aapt:attr>
    </target>
    <target android:name="big_loader">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:duration="750"
                    android:valueFrom="0.99"
                    android:valueTo="0.5"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:startOffset="750"
                    android:duration="750"
                    android:valueFrom="0.5"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:startOffset="1500"
                    android:duration="750"
                    android:valueFrom="0"
                    android:valueTo="0.5"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:startOffset="2250"
                    android:duration="750"
                    android:valueFrom="0.5"
                    android:valueTo="0.99"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="mini_loader">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:duration="750"
                    android:valueFrom="0"
                    android:valueTo="0.5"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:startOffset="750"
                    android:duration="750"
                    android:valueFrom="0.5"
                    android:valueTo="0.97"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:startOffset="1500"
                    android:duration="750"
                    android:valueFrom="0.97"
                    android:valueTo="0.5"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:startOffset="2250"
                    android:duration="750"
                    android:valueFrom="0.5"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="mini_loader_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="3000"
                android:valueFrom="0"
                android:valueTo="-1440"
                android:valueType="floatType"
                android:interpolator="@android:anim/linear_interpolator"/>
        </aapt:attr>
    </target>
</animated-vector>
