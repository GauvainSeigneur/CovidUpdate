<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dragIndicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_dialog_top_transparent_height"
            android:src="@drawable/ic_drag_indicator_white_24dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/space_m"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            style="@style/Typography.TextAppearance.Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="@dimen/space_m"
            android:paddingStart="@dimen/space_m"
            android:text="@string/app_name"/>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>