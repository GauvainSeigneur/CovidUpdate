<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/dragIndicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_dialog_top_transparent_height"
            android:src="@drawable/ic_drag_indicator_white_24dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/menu_logo_size"
            android:layout_height="@dimen/menu_logo_size"
            android:layout_margin="@dimen/space_m"
            app:cardCornerRadius="@dimen/card_logo_radius"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/colorBackground"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/ic_launcher_foreground"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            style="@style/Typography.TextAppearance.Headline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="@dimen/space_m"
            android:paddingStart="@dimen/space_m"
            android:text="@string/app_name"/>

        <TextView
            style="@style/Typography.TextAppearance.Body2"
            android:paddingTop="@dimen/space_m"
            android:paddingEnd="@dimen/space_m"
            android:paddingStart="@dimen/space_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description_one"/>

        <TextView
            style="@style/Typography.TextAppearance.Body2"
            android:paddingTop="@dimen/space_s"
            android:paddingEnd="@dimen/space_m"
            android:paddingStart="@dimen/space_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description_two"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/librariesButton"
            style="@style/Widget.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xl"
            android:text="@string/about_library"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gitHubButton"
            style="@style/Widget.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_m"
            android:text="@string/github_repository"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>