<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget" parent="CovidUpdateTheme" />

    <style name="Widget.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:outlineAmbientShadowColor" tools:targetApi="28">@color/colorSecondary
        </item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="28">@color/colorSecondary
        </item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/selector_button_background_secondary</item>
        <item name="iconTint">@color/selector_button_icon_secondary</item>
        <item name="android:textColor">@color/selector_button_text_secondary</item>
    </style>

    <style name="Widget.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/selector_text_button_icon_secondary</item>
        <item name="android:textColor">@color/selector_text_button_text_secondary</item>
    </style>



    <style name="Widget.Button.SearchButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="Widget.AppbarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Tabs" parent="Widget.MaterialComponents.TabLayout" />

    <style name="Widget.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_background</item>
    </style>

    <style name="Widget.BaseBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/Widget.BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Widget.BaseBottomSheetDialog" />

    <!-- TextAppearance -->

    <style name="TextAppearance.StatisticsItem.Title" parent="@style/Typography.TextAppearance.Subtitle2"/>

    <style name="TextAppearance.StatisticsItem.subTitle" parent="@style/Typography.TextAppearance.Body2">
        <item name="android:textColor">@color/colorWhiteDark</item>
    </style>

    <style name="TextAppearance.Chart.Marker.Overline" parent="@style/Typography.TextAppearance.Overline">
        <item name="android:textColor">@color/colorWhiteDark</item>
    </style>

    <style name="TextAppearance.Chart.Marker.Body" parent="@style/Typography.TextAppearance.Body2">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.Chart.Title" parent="@style/Typography.TextAppearance.Headline1">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.Chart.Body" parent="@style/Typography.TextAppearance.Body2">
        <item name="android:textColor">@color/colorWhiteDarker</item>
    </style>

</resources>