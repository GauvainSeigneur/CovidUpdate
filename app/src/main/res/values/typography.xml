        <item name="android:textAllCaps">false</item>
    </style>

    <!-- use for Toolbar title -->
    <style name="Typography.TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="font">@font/work_sans_medium</item>
        <item name="android:textStyle">normal</item>
